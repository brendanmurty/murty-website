{
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.3",
    "@std/datetime": "jsr:@std/datetime@0.225.1",
    "@std/dotenv": "jsr:@std/dotenv@0.225.1",
    "@std/fs": "jsr:@std/fs@1.0.2",
    "@std/path": "jsr:@std/path@1.0.3",
    "@std/yaml": "jsr:@std/yaml@1.0.4",
    "deno-exif/": "https://deno.land/x/deno_exif@0.0.4/",
    "imagescript/": "https://deno.land/x/imagescript@1.3.0/",
    "is_json/": "https://deno.land/x/is_json@v1.0.2/",
    "json2yaml/": "https://deno.land/x/json2yaml@v1.0.1/",
    "lume/": "https://deno.land/x/lume@v2.3.0/",
    "oak/": "https://deno.land/x/oak@v16.1.0/"
  },
  "tasks": {
    "build": "bash ./tools/build.sh",
    "deno-serve": "deno task build && echo 'Server starting at http://localhost:8000/' && deno run --allow-net --allow-read src/server.ts",
    "deno-test": "bash ./tools/test.sh",
    "docker-build": "docker build --quiet --tag murty-website .",
    "docker-build-debug": "docker build --progress=plain --tag murty-website .",
    "docker-remove": "docker rm --force murty-website || true",
    "docker-restart": "deno task docker-build && deno task docker-stop && deno task docker-remove && deno task docker-run",
    "docker-run": "docker run --publish 8000:8000 --detach --name=murty-website murty-website",
    "docker-serve": "deno task docker-restart && echo 'Server started at http://localhost:8000'",
    "docker-stop": "docker stop murty-website || true",
    "docker-test": "deno task docker-restart && docker exec murty-website bash /murty-website/tools/test.sh",
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "release": "bash ./tools/release.sh",
    "serve": "deno task docker-serve",
    "setup": "bash ./tools/setup.sh",
    "test": "deno task docker-test"
  }
}