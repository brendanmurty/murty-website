{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "npm:react",
    "jsxImportSourceTypes": "npm:@types/react",
    "types": [
      "lume/types.ts"
    ]
  },
  "imports": {
    "@gnome/exec": "jsr:@gnome/exec@^0.6.0",
    "@std/assert": "jsr:@std/assert@^1.0.4",
    "@std/datetime": "jsr:@std/datetime@^0.225.2",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.2",
    "@std/http/file-server": "jsr:@std/http@^1.0.6/file-server",
    "@std/fs": "jsr:@std/fs@^1.0.3",
    "@std/path": "jsr:@std/path@^1.0.4",
    "@std/yaml": "jsr:@std/yaml@^1.0.5",
    "deno-exif/": "https://deno.land/x/deno_exif@0.0.4/",
    "imagescript/": "https://deno.land/x/imagescript@1.3.0/",
    "is_json/": "https://deno.land/x/is_json@v1.0.2/",
    "json2yaml/": "https://deno.land/x/json2yaml@v1.0.0/",
    "lume/": "https://deno.land/x/lume@v2.3.1/",
    "minify": "npm:minify"
  },
  "tasks": {
    "build": "bash ./src/commands/build.command.sh",
    "format": "deno fmt --options-indent-width=2 --options-use-tabs=false --options-line-width=120 src/ config/lume.config.ts",
    "lint": "deno lint src/ config/lume.config.ts",
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "lume-install": "deno install --global --allow-run --allow-env --allow-read --name lume --force --reload https://deno.land/x/lume_cli@v2.1.1/mod.ts",
    "release": "deno run --allow-run --allow-read --allow-env --allow-write=./ src/commands/release.command.ts",
    "serve": "deno task build && deno run --allow-net --allow-read src/commands/server.command.ts",
    "setup": "deno run --allow-run --allow-read --allow-write=./ src/commands/setup.command.ts",
    "test": "deno task build && deno run --allow-run --allow-read --allow-write=./test.log,./build --allow-env --allow-net src/commands/test.command.ts",
    "test-run": "deno test --allow-run --allow-env --allow-read --allow-net src --quiet"
  }
}