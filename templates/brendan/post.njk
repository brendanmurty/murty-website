{% include "brendan/header.njk" %}
<body class="brendan brendan_post">
  <section class="container">
    <header>
      {% include "brendan/heading.njk" %}
    </header>

    <article>
      <h2><a href="/brendan/posts">Posts</a> > {{ title }}</h2>

      <p><em>{{ date | date('d LLL yyyy') }}</em></p>

      <ul class="tag-list">
        {% for tag in tags %}
        <li>
          <a class="tag-link" href="/brendan/tags/{{ tag }}" title="View posts tagged with {{ tag }}">
            <span class="icon fa-fw fa-solid fa-tag"></span>
            {{ tag }}
          </a>
        </li>
        {% endfor %}
      </ul>

      {{ content | safe }}
    </article>
  </section>
</body>
{% include "brendan/footer.njk" %}
