{% include "brendan/header.njk" %}
<body class="brendan brendan_post">
  <section class="container">
    <header>
      {% include "brendan/heading.njk" %}
    </header>

    <article>
      <h2><a href="/">Home</a> > <a href="/brendan/posts">Posts</a> > {{ title }}</h2>

      <p><em>{{ date | date('d LLL yyyy') }}</em></p>

      <ul class="tag-list">
        {% for tag in tags %}
        <li>
          <a class="tag-link" href="/brendan/tags/{{ tag }}" title="View posts tagged with {{ tag }}">
            <span class="icon fa-fw fa-solid fa-tag"></span>
            {{ tag }}
          </a>
        </li>
        {% endfor %}
      </ul>

      {{ content | safe }}

      {% if photo_file %}
      <ul class="photo-data">
        {% if photo_device %}<li><span class="data-title">Device</span><span class="data-value">{{ photo_device }}</span></li>{% endif %}
        {% if photo_width and photo_height %}<li><span class="data-title">Dimensions</span><span class="data-value">{{ photo_width }} x {{ photo_height }}</span></li>{% endif %}
        {% if photo_lens %}<li><span class="data-title">Lens</span><span class="data-value">{{ photo_lens }}</span></li>{% endif %}
        {% if photo_fnumber %}<li><span class="data-title">Focal length</span><span class="data-value">{{ photo_fnumber }}</span></li>{% endif %}
      </ul>
      {% endif %}
    </article>
  </section>
</body>
{% include "brendan/footer.njk" %}
