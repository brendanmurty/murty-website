{% if site.BLOG_POSTS_LATEST %}
{% for post in site.BLOG_POSTS_LATEST %}
{% set post_url = post.url | replace("https://murty.au/", "/") %}
<li>
  <span class="post-date">
    {{ post.date_published | date('d LLL yyyy') }}
  </span>
  <a class="post-link" href="{{ post_url }}">
    {{ post.title }}
  </a>
</li>
{% endfor %}
{% endif %}